<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/icomoon (1)/style.css">
        <link rel="icon" type="image/png" href="/threads.png">
        <title>Threads</title>
    </head>

    <body class="bg-[#0a0a0a] font-sans">
        <nav class="bg-white fixed top-0 w-[100%] shadow-md py-4 px-8 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <span class="text-black text-2xl font-bold tracking-tight">Threads</span>
            </div>
            <div class="flex gap-4">
                <a href="#" class="text-gray-700 hover:text-black hover:bg-gray-300 rounded p-1 font-medium">Explore</a>
                <a href="/signup"
                    class="text-gray-700 hover:text-black hover:bg-gray-300 p-1 rounded font-bold">Signup</a>
                <a href="/login"
                    class="text-gray-700 hover:text-black  bg-gray-300 rounded shadow-md p-1 font-bold">Login</a>
            </div>
        </nav>

        <body class="bg-black font-sans min-h-screen">
            <!-- Navbar -->
            <nav class="bg-[#181818] border-b border-gray-800 fixed top-0 w-full z-40 shadow-sm">
                <div class="max-w-3xl mx-auto flex items-center justify-between px-4 py-3">
                    <span class="text-white text-2xl font-bold tracking-tight">Threads</span>
                    <div class="flex gap-2">
                        <a href="#" class="text-gray-400 hover:text-white px-3 py-1 rounded transition">استكشاف</a>
                        <a href="/signup" class="text-gray-400 hover:text-white px-3 py-1 rounded transition">تسجيل</a>
                        <a href="/login" class="text-gray-400 hover:text-white px-3 py-1 rounded transition">دخول</a>
                    </div>
                </div>
            </nav>
            <div class="h-16"></div>
            <main class="flex mx-auto pt-4 md:flex-row-reverse">
                <!-- buttons -->
                <div>
                    <div class="flex flex-row justify-center gap-3 p-2 md:flex-col z-10 md:bg-transparent bg-black md:relative absolute bottom-0 md:w-fit w-[100vw]">
                        <a href="/" class="hover:bg-gray-800 p-2 rounded transition-all"><span class="hover:opacity-100 icon-home text-white text-3xl opacity-30"></span></a>
                        <a href="/search" class="hover:bg-gray-800 p-2 rounded transition-all"><span class="hover:opacity-100 icon-search2 text-white text-3xl "></span></a>
                        <a href="/likes" class="hover:bg-gray-800 p-2 rounded transition-all"><span class="hover:opacity-100 icon-heart-outline text-white text-3xl opacity-30"></span></a>
                        <a href="/profile" class="hover:bg-gray-800 p-2 rounded transition-all"><span class="hover:opacity-100 icon-user text-white text-3xl opacity-30"></span></a>
                    </div>
                </div>
                <!-- Contents -->
                <div class="sm:rounded-3xl h-[75vh] bg-[#181818] mx-auto custom-scroll overflow-y-auto p-4 sm:w-[80%] w-full">
                    <div class="max-h-[90vh] text-white">
                        <!-- Search Form -->
                        <form id="searchForm" class="flex items-center gap-2 mb-8" onsubmit="(e) => {e.preventDefault()}">
                            <input id="searchInput" name="searchInput" class="flex-1 bg-[#232323] text-white rounded-full px-4 py-3 focus:outline-none text-base" placeholder="ابحث عن مستخدم ..."/>
                            <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-full px-5 py-2 transition">بحث</button>
                        </form>
                        <!-- Search Results -->
                        <div class="flex flex-col gap-6">
                            <!-- مثال نتيجة بحث -->
                            <ul id="searchResult" class="bg-[#232323] rounded-xl p-5 shadow flex flex-col gap-2">
                                <p class="text-center text-lg opacity-40"> نتيجة البحث فارغة</p>
                               
                            </ul>
                        </div>
                    </div>
                </div>
            </main>

            <script>
                const searchInput = document.querySelector('#searchInput')
                document.addEventListener("DOMContentLoaded", () => {
                    searchInput.addEventListener('input', async () => {
                        const query = searchInput.value.trim();
                        // console.log(location.search)

                        
                        if(query.length > 0) {
                            try {
                                await fetch(`/search/findUser?q=${query}`, {
                                    credentials: "include", 
                                     headers: {
                                         'Content-Type': 'application/json'
                                    }
                                }
                             ).then (res => res.json())
                              .then (data => {
                                console.log(data)
                                const result = document.getElementById('searchResult')
                                const users = data.users
                                localStorage.setItem('searchResults', JSON.stringify(users))
                                let list = ''
                                users.forEach(user => {
                                    console.log(user)
                                    list += `
                                    <a href="/profile/${user._id}" class="flex items-center gap-2 mb-2 last:hover:py-0 hover:py-1 transition-all duration-150 ease-linear">
                                            ${user.avatar ? `<img src="${user.avatar}" class="w-9 h-9 rounded-full object-cover">` : `<span class="icon-user text-gray-500 text-[35px] rounded-full bg-[#555] border-[#555]"></span>`}
                                            
                                            <span class="font-semibold text-sm">${user.username}</span>
                                            <span class="text-xs text-gray-500 ms-auto">${user.createdAt} </span>
                                    </a>
                                    `
                                });
                                result.innerHTML = list
                              })

                            } catch(err) {
                                console.log(err)
                            }

                        }
                    })

                })
            </script>
        </body>